generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  createdAt  DateTime @default(now())
  name       String
  email      String   @unique
  password   String
  resetToken String?
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  title     String
  price     Float
  category  String
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}
